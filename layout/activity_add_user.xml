<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="48dp"
    android:background="#FFFFFF">

    <!-- Champ de nom -->
    <EditText
        android:id="@+id/nom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:hint="Nom"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Champ de prénom -->
    <EditText
        android:id="@+id/prenom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prénom"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <!-- Champ de CIN -->
    <EditText
        android:id="@+id/cin_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CIN"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>



    <!-- Champ d'adresse -->
    <EditText
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <!-- Champ de date de naissance -->
    <EditText
        android:id="@+id/date_naissance_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date de naissance"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <!-- Champ d'email -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>



    <!-- Checkbox for Admin User -->
    <CheckBox
        android:id="@+id/is_admin_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Admin User"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="2dp"/>

    <!-- Bouton ajouter utilisateur -->
    <Button
        android:id="@+id/add_user_button"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_margin="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#3F51B5"
        android:padding="12dp"
        android:text="AJOUTER UTILISATEUr"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

</LinearLayout>
