<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestion des R么les"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#77b5fe" />/>

    <Button
        android:id="@+id/add_role_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un r么le"
        android:backgroundTint="#77b5fe" />/>

    <Button
        android:id="@+id/remove_role_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supprimer un r么le"
        android:layout_marginTop="16dp"
        android:backgroundTint="#77b5fe" />/>

    <Button
        android:id="@+id/update_role_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier un r么le"
        android:layout_marginTop="16dp"
        android:backgroundTint="#77b5fe" />/>

</LinearLayout>
