<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/beneficiary_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter beneficiary's RIB"
        android:inputType="number"
        android:layout_margin="48dp"
        android:maxLength="11"
        android:layout_marginBottom="16dp"/>


    <Button
        android:id="@+id/search_beneficiary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Beneficiary"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/beneficiary_found_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beneficiary: "
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_margin="48dp"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/current_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Account: "
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_margin="48dp"
        android:layout_marginBottom="16dp"/>


    <EditText
        android:id="@+id/transfer_amount_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount to transfer"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"
        android:layout_margin="48dp"
        android:visibility="gone"/>


    <Button
        android:id="@+id/validate_transfer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate Transfer"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>



</LinearLayout>
